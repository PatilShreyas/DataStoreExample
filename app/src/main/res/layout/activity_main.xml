<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPreference"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Preference DataStore Example"
        app:layout_constraintBottom_toTopOf="@+id/buttonProto"
        app:layout_constraintEnd_toEndOf="@+id/buttonProto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/buttonProto"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Proto Datastore Preference"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPreference" />
</androidx.constraintlayout.widget.ConstraintLayout>